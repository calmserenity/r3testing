@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap');
$width: {{ settings.page_width }}px; 
$blacktext: {{ settings.text_color}};
$bp: 750px; 
$white: #ffffff; 

.h2 {
    font-size: 1.5em; 
}

.h1 {
    font-size: 2em; 
}

.h0 {
    font-size: 3em; 
}

::-webkit-scrollbar {
    width: 10px;
    height: 10px; 
}

::-webkit-scrollbar-track {
    background: #f1f1f1; 
}
 
::-webkit-scrollbar-thumb {
    background: #888; 
}

::-webkit-scrollbar-thumb:hover {
    background: #555; 
}

*{
    margin: 0; 
    padding: 0; 
    box-sizing: border-box; 
}

html, body{
    font-family: 'Oswald', sans-serif;
    height: 100%; 
    width: 100%;
    margin: 0; 
    padding: 0; 
    overflow: none; 
    overflow-x: none; 
}

a{
    text-decoration: none; 
    color: $blacktext; 
}

li{
    list-style: none; 
}

img, svg {
    display: block; 
    width: 100px; 
}

.hero{
    background: #111111; 
}

/*header*/ 

.pc-header{
    max-width: $width; 
    width: calc(100% - 40px); 
    margin:0 auto; 
    background: $white; 

    @media only screen and (max-width: 749px){ 
        display: none; 
    }
}

.header-flex{
    display: flex; 
    align-items: center; 
    justify-content: space-between; 
}

.menu{
    display: flex; 

}

.icon-item svg{
    display: block; 
    width: 90px; 
    margin-bottom: 2px; 

}

.menu-item{
    display: block; 
    width: 90px; 

}

.menu-nav{
    font-size: 19px;
    font-weight: 700; 
}

.mobile-header{
    @media only screen and (min-width: $bp){ 
        display: none; 
    }
}

.mobile-logo {
    display: flex; 
    justify-content: center; 
    position: absolute; 
    top: 10%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3; 
}

/*hero*/ 

.mobile-banner{
    width: 100vw; 
    height: 100vh;  
    position: relative; 
    overflow: hidden; 

    @media only screen and (min-width: 750px){ 
        display: none; 
    }
}

.mobile-banner .mslide-list{ 
    display: flex; 
    position: absolute; 
    width: 100%; 
    height: 100%; 
    left: 0; 
    top: 0; 
    transition: 1s; 
}

.m-slideshow{
    z-index: 2; 
}

.m-slideshow img{
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    opacity: 0.9; 
}

.desktop-banner{ 
    max-width: 100vw; 
    height: 80vh;  
    position: relative; 
    overflow: hidden; 

    @media only screen and (max-width: 749px){
        display: none; 
    }
}

.desktop-banner .dslide-list{ 
    display: flex; 
    position: absolute; 
    width: 100%; 
    height: 100%; 
    left: 0; 
    top: 0; 
    transition: 1s;
}

.d-slideshow {
    z-index: 2; 
}

.d-slideshow img{
    width: 100vw;
    height: 80vh;
    object-fit: cover;
    opacity: 0.9; 
}

.desktop-banner .dslide-list .d-slideshow .banner-content{
    position: absolute;
    left: 42%;
    top: 40%;
    width: 80vw;
    max-width: 80%;
    z-index: 3;
}

.d-slideshow.active, 
.banner-content.active {
    opacity: 1;
    z-index: 10;
}

/*featured products*/ 

.desktop-featured{
    margin: 50px 20px; 

    @media only screen and (max-width: 749px){
        margin: 50px 10px;  
    }
}

.desktop-featured img{
    width: 25vw; 
    height: 65vh; 
    padding: 0.1313em 0; 

    @media only screen and (max-width: 749px){
        width: 45vw; 
        height: 30vh; 
    }
}

.dfeature-row{
    display: flex; 
    flex-direction: row; 
    overflow-x: scroll; 

    @media only screen and (max-width: 749px){
        display:flex; 
        flex-wrap: wrap; 
        justify-content: center; 
    }
}

.dfeature-column{

    @media only screen and (max-width: 749px){
        flex: 0 0 50%; 
        max-width: 50%; 
    }
}

.dfeature-imageslide{
    padding: 0.313em 0.313em; 

    @media only screen and (max-width: 749px){ 
        padding: 0 0.563em; 
    }
}

.dfeature-imageslide h3{
    padding: 5px 0; 

}



