/*mobile-menu*/
.m-menu{
    position: fixed; 
    bottom: 2vh; 
    right: 2vw; 
    z-index: 1000; 

    @media only screen and (min-width: 750px){
        display: none;
    }
}

.menu-button h4{
    font-weight: bold; 
    font-size: 20px; 
    
}

.menu-button{
    border: none; 
    width: 40vw; 
    height: 8vh; 
    border-radius: 20px; 
    cursor: pointer;  
}

