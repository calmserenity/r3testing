<div class="desktop-featured">
    <div class="dfeatured-title">
        <h1>ICONIC</h1>
    </div>
    <div class="dfeature-row">
        {% for product in collections['frontpage'].products %}
        <div class="dfeature-column">
        <div class="dfeature-imageslide">
            <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: source }}" />
            </a>
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
        </div>
        </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "featured-products",
  "presets": [
    {
      "name": "featured-products"
    }
  ]
}
{% endschema %}